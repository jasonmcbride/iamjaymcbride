        .tool-logo::after {
            content: attr(data-tooltip);
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(100, 35, 167, 0.8);
            color: white;
            padding: 4px 8px;
